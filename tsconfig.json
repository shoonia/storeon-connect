{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2021",
    "sourceMap": false,
    "strict": true,
    "noEmit": true,
    "lib": [
      "ES2021"
    ]
  },
  "include": [
    "src/**/*.js",
    "test/**/*.js"
  ],
  "exclude": [
    "node_modules/"
  ]
}
