{
  "name": "storeon-connect",
  "version": "0.6.0",
  "description": "A tiny connector for observes changes in Storeon",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.es5.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "default": "./dist/index.es5.js",
      "types": "./src/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint src/**/*.js test/**/*.js",
    "build": "rollup -c",
    "size": "size-limit",
    "tsc": "tsc test/types-test.ts --noEmit --strict",
    "test": "node --experimental-vm-modules node_modules/.bin/jest && npm run tsc"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@rollup/plugin-babel": "^5.3.0",
    "@size-limit/preset-small-lib": "^5.0.4",
    "@types/jest": "^27.0.2",
    "eslint": "^8.0.0",
    "jest": "^27.2.5",
    "rollup": "^2.58.0",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^5.0.4",
    "storeon": "^3.1.4",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "storeon": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "storeon": {
      "optional": true
    }
  },
  "sideEffects": false,
  "simple-git-hooks": {
    "pre-commit": "npm run lint && npm run build && npm run size && npm test"
  },
  "size-limit": [
    {
      "path": "dist/index.cjs",
      "limit": "204 B"
    },
    {
      "path": "dist/index.es5.js",
      "limit": "209 B"
    },
    {
      "path": "dist/index.js",
      "limit": "170 B"
    }
  ],
  "files": [
    "dist",
    "src",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shoonia/storeon-connect.git"
  },
  "bugs": {
    "url": "https://github.com/shoonia/storeon-connect/issues"
  },
  "keywords": [
    "storeon"
  ],
  "author": {
    "name": "Alexander Zaytsev",
    "email": "zaytsev126@gmail.com",
    "url": "https://twitter.com/_shoonia"
  },
  "homepage": "https://github.com/shoonia/storeon-connect#readme",
  "license": "MIT"
}
